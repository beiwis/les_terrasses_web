---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import FacebookWidget from '../components/FacebookWidget.astro';
---

<Layout title="Contact | Les Terrasses des Charmilles">
  <Header />

  <Hero 
    title="Contactez-nous"
    subtitle="Nous sommes à votre écoute"
    image="/images/oveview_night.jpg"
    height="medium"
  />

  <!-- Contact Section -->
  <Section background="white">
    <div class="grid lg:grid-cols-2 gap-16">
      <!-- Contact Form -->
      <div>
        <h2 class="font-serif text-3xl text-charcoal mb-6">Envoyez-nous un message</h2>
        <p class="text-charcoal/70 mb-8">
          Vous souhaitez réserver ou avez des questions sur nos hébergements ? 
          Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.
        </p>
        
        <form 
          name="contact" 
          method="POST" 
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/merci"
          class="space-y-6"
        >
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>
              Ne pas remplir si vous êtes humain: <input name="bot-field" />
            </label>
          </p>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-charcoal mb-2">
                Nom complet *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
                placeholder="Votre nom"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-charcoal mb-2">
                Email *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
                placeholder="votre@email.com"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="phone" class="block text-sm font-medium text-charcoal mb-2">
                Téléphone
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
                placeholder="+33 6 00 00 00 00"
              />
            </div>
            <div>
              <label for="property" class="block text-sm font-medium text-charcoal mb-2">
                Hébergement souhaité
              </label>
              <select 
                id="property" 
                name="property"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all bg-white"
              >
                <option value="">Sélectionner...</option>
                <option value="villa">Villa T4</option>
                <option value="studio">Studio T1</option>
                <option value="both">Les deux</option>
              </select>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="checkin" class="block text-sm font-medium text-charcoal mb-2">
                Date d'arrivée
              </label>
              <input 
                type="date" 
                id="checkin" 
                name="checkin"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
              />
            </div>
            <div>
              <label for="checkout" class="block text-sm font-medium text-charcoal mb-2">
                Date de départ
              </label>
              <input 
                type="date" 
                id="checkout" 
                name="checkout"
                class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
              />
            </div>
          </div>

          <div>
            <label for="guests" class="block text-sm font-medium text-charcoal mb-2">
              Nombre de voyageurs
            </label>
            <input 
              type="number" 
              id="guests" 
              name="guests"
              min="1"
              max="8"
              class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all"
              placeholder="2"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-charcoal mb-2">
              Message *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-gold focus:border-transparent transition-all resize-none"
              placeholder="Décrivez votre projet de séjour..."
            ></textarea>
          </div>

          <button 
            type="submit"
            class="w-full py-4 bg-charcoal text-white font-sans text-sm uppercase tracking-widest rounded-lg hover:bg-charcoal/90 transition-colors"
          >
            Envoyer ma demande
          </button>
        </form>
      </div>

      <!-- Contact Info & Facebook -->
      <div>
        <!-- Contact Info -->
        <div class="bg-cream rounded-2xl p-8 mb-8">
          <h3 class="font-serif text-2xl text-charcoal mb-6">Informations de contact</h3>
          
          <ul class="space-y-6">
            <li>
              <a 
                href="mailto:lesterrassesdescharmilles@gmail.com"
                class="flex items-start gap-4 group"
              >
                <span class="w-12 h-12 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </span>
                <span>
                  <span class="block text-sm text-charcoal/60 mb-1">Email</span>
                  <span class="text-charcoal group-hover:text-gold transition-colors break-all">
                    lesterrassesdescharmilles@gmail.com
                  </span>
                </span>
              </a>
            </li>
            
            <li class="flex items-start gap-4">
              <span class="w-12 h-12 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </span>
              <span>
                <span class="block text-sm text-charcoal/60 mb-1">Adresse</span>
                <span class="text-charcoal">
                  La Saline les Bains<br />
                  97434 Île de la Réunion
                </span>
              </span>
            </li>

            <li>
              <a 
                href="https://www.facebook.com/p/Les-Terrasses-des-Charmilles-61567753822789/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-start gap-4 group"
              >
                <span class="w-12 h-12 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-colors">
                  <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </span>
                <span>
                  <span class="block text-sm text-charcoal/60 mb-1">Facebook</span>
                  <span class="text-charcoal group-hover:text-gold transition-colors">
                    Les Terrasses des Charmilles
                  </span>
                </span>
              </a>
            </li>
          </ul>
        </div>

        <!-- Facebook Widget -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="font-serif text-2xl text-charcoal mb-6 text-center">Notre page Facebook</h3>
          <FacebookWidget 
            pageUrl="https://www.facebook.com/p/Les-Terrasses-des-Charmilles-61567753822789/"
            width={340}
            height={400}
          />
        </div>
      </div>
    </div>
  </Section>

  <!-- Map Section -->
  <Section background="cream" subtitle="Localisation" title="Comment Nous Trouver">
    <div class="max-w-5xl mx-auto">
      <div class="rounded-2xl overflow-hidden shadow-xl">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14896.86841802589!2d55.21!3d-21.07!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x21787c097c67f9c5%3A0x2c4f4f95b1c1d33e!2sLa%20Saline-les-Bains%2C%20R%C3%A9union!5e0!3m2!1sfr!2sfr!4v1700000000000!5m2!1sfr!2sfr"
          width="100%" 
          height="450" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
      <div class="mt-8 text-center">
        <p class="text-charcoal/70">
          Située à La Saline les Bains, entre la pointe de Trois Bassins et Trou d'Eau, 
          à proximité immédiate du lagon.
        </p>
      </div>
    </div>
  </Section>

  <Footer />
</Layout>

<style>
  /* Form focus styles */
  input:focus, select:focus, textarea:focus {
    outline: none;
  }
</style>
